@model IEnumerable<_3esiEmployeeSystemV1.Models.Employee.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Master Search</h2>
@using (Html.BeginForm("Index", "Search", FormMethod.Get))
{
<table class ="table-condensed">
    <tr>
        <td> Department:</td>
        <td>@Html.DropDownList("departmentType", "All") </td>
    </tr>
    <tr>
        <td>Budget Area:</td>
        <td>@Html.DropDownList("budgetAreaType", "All") </td>
    </tr>
    <tr>
        <td>Status:</td>
        <td>@Html.DropDownList("statusType", "All") </td>
    </tr>
    <tr>
        <td>Legal Company:</td>
        <td>@Html.DropDownList("lCompType", "All")</td>
    </tr>
    <tr>
        <td>Heritage Company:</td>
        <td> @Html.DropDownList("hCompType", "All")</td>
    </tr>
    <tr>
        <td>Employee Type:</td>
        <td>@Html.DropDownList("empType", "All")</td>
    </tr>
    <tr>
        <td>Union Status:</td>
        <td> @Html.DropDownList("unionType", "All") </td>
    </tr>
    <tr>
        <td>Overtime:</td>
        <td>@Html.DropDownList("overtimeType", "All")</td>
    </tr>
    <tr>
        <td>Compensation:</td>
        <td>@Html.DropDownList("compensationType", "All")</td>
    </tr>
    <tr>
        <td>From Date:</td>
        <td> @Html.TextBox("startDate", "", new { placeholder = "mm/dd/yyyy" })</td>
    </tr>
    <tr>
        <td>To Date:</td>
        <td> @Html.TextBox("endDate", "", new { placeholder = "mm/dd/yyyy" })</td>
    </tr>
    <tr>
        <td>Name:</td>
        <td> @Html.TextBox("searchString")</td>
    </tr>
</table>
    <p>
        <br />
        <input type="submit" value="Filter" />
    </p>
}
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.HireDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HireDate)
                    </td>
                    <td>
                        @Html.ActionLink("Select", "HistoryReport", "Reporting", new { id = item.EmployeeID }, null) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                    </td>
                </tr>
            }

        </table>
