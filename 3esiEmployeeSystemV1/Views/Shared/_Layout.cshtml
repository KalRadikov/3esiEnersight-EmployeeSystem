                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Employee History", "Index", "Employee")</li>
                            <li>@Html.ActionLink("By Entity Dashboard", "EntityReport", "Reporting")</li>
                            <li>@Html.ActionLink("By Compensation Dashboard", "CompensationReport", "Reporting")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
